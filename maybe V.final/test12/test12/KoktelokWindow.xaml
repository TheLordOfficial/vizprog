<Window x:Class="test12.KoktelokWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Koktélok" Height="400" Width="600">
    <Grid>
        <!-- Kereső mezők -->
        <TextBlock Text="Összetevő keresés:" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="textBoxOsszetevok" VerticalAlignment="Top" Margin="10,40,10,0" Height="30"/>

        <!-- Keresés gomb -->
        <Button Content="Keresés" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="10,80,0,0" Click="KeresesButton_Click"/>

        <!-- Koktélok listája -->
        <StackPanel x:Name="stackPanelKoktelok" VerticalAlignment="Top" Margin="10,120,10,10"/>
    </Grid>
</Window>
